---
import ButtonValueList, { ButtonItem, PresetName } from "./ButtonValueList.astro";

export interface Props {
  name: string;
  preset: PresetName | readonly ButtonItem[];
  class?: string;
  showLabels?: boolean;
  reveal?: string;
  value?: string | number;
}

const {
  name,
  preset: items,
  class: className,
  showLabels,
  reveal,
  value,
  /** */
} = Astro.props;
---

<ButtonValueList
  field={name}
  action="set-field"
  class={className}
  active={value}
  showLabel={showLabels}
  {...{ items, reveal }}
/>
